# ---------- Text normalization ----------
* text=auto

# Force LF for code and config (cross-platform friendly)
*.cs      text eol=lf
*.csproj  text eol=lf
*.sln     text eol=lf
*.props   text eol=lf
*.targets text eol=lf
*.json    text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.xml     text eol=lf
*.md      text eol=lf
*.ts      text eol=lf
*.js      text eol=lf
*.css     text eol=lf
*.html    text eol=lf
*.sh      text eol=lf
*.cmd     text eol=crlf
*.bat     text eol=crlf

# PowerShell scripts (Windows dev ergonomics): CRLF
*.ps1     text eol=crlf

# ---------- Binary files ----------
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.svg     text
*.ico     binary
*.pdf     binary
*.zip     binary
*.7z      binary
*.pfx     binary
*.p12     binary
*.pem     text
*.key     text
*.crt     text
*.cer     text
